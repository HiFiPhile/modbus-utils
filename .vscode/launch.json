    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mingw",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/modbus_client.exe",
            "args": ["rtu", "-a", "1", "-r", "0", "-f", "1", "-d", "COM3", "-b", "9600"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}